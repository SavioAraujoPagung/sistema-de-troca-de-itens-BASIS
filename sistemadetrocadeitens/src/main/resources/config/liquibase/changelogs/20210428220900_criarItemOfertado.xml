<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet  id="202104282209"  author="Savio">
        <createTable  tableName="tb_item_ofertado">
            <column  name="id_oferta"  type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column  name="id_item_ofertado"  type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <createSequence  incrementBy="1"
                         sequenceName="seq_tb_oferta"
                         startValue="1"/>

<!--    <addForeignKeyConstraint
        baseTableName = nome da tabela atual
        baseColumnNames = nome da coluna fk da tabela atual
        referencedTableName = nome da tabela referenciada
        referencedColumnNames = coluna "id" da tabela referenciada
        constraintName = nome da fk nao obrigatorio
        />
 -->
        <addForeignKeyConstraint  baseTableName="tb_item_ofertado"
                                  baseColumnNames="id_oferta"
                                  referencedTableName="tb_oferta"
                                  referencedColumnNames="id"
                                  constraintName="fk_item_ofertado_oferta"
        />
        <addForeignKeyConstraint  baseTableName="tb_item_ofertado"
                                  baseColumnNames="id_item_ofertado"
                                  referencedTableName="tb_item"
                                  referencedColumnNames="id"
                                  constraintName="fk_item_ofertado_item"
        />
    </changeSet>

</databaseChangeLog>